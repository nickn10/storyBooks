<h1 class="center-align">Welcome, {{user.name.first}}</h1>
<h4>Your Stories</h4>
{{#if stories}}
   <table class="striped">
      <thead>
         <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
            <th></th>
         </tr>
      </thead>
      <tbody>
         {{#each stories}}
         <tr>
            <td><a href="/stories/{{id}}">{{title}}</a></td>
            <td>{{formatDate date 'MMMM Do YYYY'}}</td>
            <td><span class="dash-status">{{status}}</span></td>
            <td>
               <a href="/stories/edit/{{id}}"><i class="material-icons grey-text">create</i></a>
               <a href="/stories/{{id}}?_method=Delete"><i class="material-icons grey-text">delete</i></a>
            </td>
         </tr>
         {{/each}}
      </tbody>
   </table>
{{else}}
   <p>You currently have no stories</p>
{{/if}}
