<h1>Stories</h1>
<div class="row">
   {{#each stories}}
      <div class="col s12 m4">
         <div class="card z-depth-2">
            <div class="card-content">
               <span class="card-title activator">{{title}}<i class="fa fa-ellipsis-v right"></i></span>
               <p class="story-text">{{body}}</p>
               <br>
               <div class="chip center-align">
                  <img src="{{user.image}}">
                  {{user.displayName}}
               </div>
            </div>
            <div class="card-reveal">
               <span class="card-title">{{title}}<i class="fa fa-times right"></i></span>
               <div class="card-content"></div>
               <div class="card-action">
                  <a href="#">Read</a>
                  <a href="#">Edit</a>
                  <a href="#">Delete</a>
               </div>
            </div>
         </div>
      </div>
   {{else}}
      <p>You currently have no stories.</p>
   {{/each}}
</div>


