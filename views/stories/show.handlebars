<div class="row">
   {{#if story}}
      <div class="col s12  m12 l9">
         <div class="card story">
            <div class="card-content">
               <h3>{{story.title}}</h3>
               <span class="card-title">{{formatDate story.date 'MMMM Do YYYY'}}</span>
               {{{story.body}}} <!-- Three Brackets Parses HTML content -->
            </div>
         </div>
      </div>
      <div class="col s12 m12 l3">
         <div class="card center-align">
            <div class="card-content">
               <span class="card-title">{{story.user.displayName}}</span>
               <img src="{{story.user.image}}" class="circle responsive-img">
            </div>
            <div class="card-action">
               <a href="/stories/public/user/{{story.user.id}}">More Stories</a>
            </div>
         </div>
      </div>
   {{else}}
      <p>Unable to find story</p>
   {{/if}}
</div>
